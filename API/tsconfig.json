{
  "compilerOptions": {
    //### compiler behaviors ###
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,

    //### typescript rules ###
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    //### Output behaviors ###
    "outDir": "lib",
    "sourceMap": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*test.ts"
  ]
}
